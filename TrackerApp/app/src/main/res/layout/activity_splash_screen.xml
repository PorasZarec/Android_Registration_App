<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/phone_roadmap"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/phone_roadmap" />

    <ImageView
        android:id="@+id/jeep"
        android:layout_width="169dp"
        android:layout_height="112dp"
        android:layout_alignBottom="@id/phone_roadmap"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:src="@drawable/jeep_vehicle_marked" />

    <TextView
        android:id="@+id/tv1_sp_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeep Tracker"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/phone_roadmap"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv2_sp_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="italic"
        android:text="Track Jeeps nearby you"
        android:gravity="center"
        android:layout_below="@+id/tv1_sp_screen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


</RelativeLayout>